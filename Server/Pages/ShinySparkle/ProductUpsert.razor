@page "/Product/create"
@page "/Product/edit/{Id:int}"
@using Blazored.TextEditor
@using Business.Repository.IRepository
@using DataAcess
@using ShinySparkle_Server.Service
@inject NavigationManager NavigationManager
@inject IProductListRepository ProductListRepository
@inject IFileUpload FileUpload
@inject ApplicationDbContext _dbContext
@attribute [Authorize(Roles = "Admin")]
<h3 class="card-title text-info mb-3">@Title Product</h3>

<div class="row mt-2 mb-5">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <EditForm Model="productVM" OnValidSubmit="HandleProductUpsert">
                    <DataAnnotationsValidator />

                    <!-- Product Name -->
                    <div class="form-group">
                        <label>Product Name</label>
                        <InputText @bind-Value="productVM.Name" class="form-control"></InputText>
                        <ValidationMessage For="()=>productVM.Name"></ValidationMessage>
                    </div>

                    <!-- Product Category -->
                    <div class="form-group">
                        <label>Category</label>
                        <InputText @bind-Value="productVM.Category" class="form-control"></InputText>
                        <ValidationMessage For="()=>productVM.Category"></ValidationMessage>
                    </div>

                    <!-- Price & Old Price -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Price</label>
                                <InputNumber @bind-Value="productVM.Price" class="form-control"></InputNumber>
                                <ValidationMessage For="()=>productVM.Price"></ValidationMessage>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Old Price</label>
                                <InputNumber @bind-Value="productVM.OldPrice" class="form-control"></InputNumber>
                                <ValidationMessage For="()=>productVM.OldPrice"></ValidationMessage>
                            </div>
                        </div>
                    </div>

                    <!-- Product Description (Quill Editor) -->
                    <div class="form-group" style="height:150px">
                        <label>Description</label>
                       <BlazoredTextEditor @ref="@QuillHtml" Placeholder="Please enter room detals">
                            <ToolbarContent>
                                <select class="ql-header">
                                    <option selected=""></option>
                                    <option value="1"></option>
                                    <option value="2"></option>
                                    <option value="3"></option>
                                    <option value="4"></option>
                                    <option value="5"></option>
                                </select>
                                <span class="ql-formats">
                                    <button class="ql-bold"></button>
                                    <button class="ql-italic"></button>
                                    <button class="ql-underline"></button>
                                    <button class="ql-strike"></button>
                                </span>
                                <span class="ql-formats">
                                    <select class="ql-color"></select>
                                    <select class="ql-background"></select>
                                </span>
                                <span class="ql-formats">
                                    <button class="ql-list" value="ordered"></button>
                                    <button class="ql-list" value="bullet"></button>
                                </span>
                                <span class="ql-formats">
                                    <button class="ql-link"></button>
                                </span>
                            </ToolbarContent>
                            <EditorContent>

                            </EditorContent>
                        </BlazoredTextEditor>
                    </div>

                    <!-- Product Images -->
                    <!-- Product Images -->
                    <div class="form-group" style="padding-top:80px;">
                        <label>Product Images</label>
                        <InputFile OnChange="HandleImageUpload" multiple></InputFile>

                        <div class="row">
                            @if (isImageUploadProcessStarted)
                            {
                                <div class="col-md-12">
                                    <span><i class="fa fa-spin fa-spinner"></i> Uploading images...</span>
                                </div>
                            }

                            <!-- Display Main Image -->
                            @if (!string.IsNullOrEmpty(productVM.MainImageUrl))
                            {
                                <div class="col-md-3 mt-3">
                                    <label>Main Image</label>
                                    <div class="room-image" style="background:url('@productVM.MainImageUrl') 50% 50%; background-size: cover; height: 150px;">
                                    </div>
                                    <button @onclick="()=>DeletePhoto(productVM.MainImageUrl, true)" type="button" class="btn btn-outline-danger btn-block mt-2">
                                        Delete
                                    </button>
                                </div>
                            }

                            <!-- Display Additional Images -->
                            @if (productVM.AdditionalImages != null && productVM.AdditionalImages.Count > 0)
                            {
                                <div class="col-md-12">
                                    <label>Additional Images</label>
                                </div>
                                int serial = 1;
                                foreach (var image in productVM.AdditionalImages)
                                {
                                    <div class="col-md-2 mt-3">
                                        <div class="room-image" style="background:url('@image') 50% 50%; background-size: cover; height: 100px;">
                                            <span class="room-image-title">@serial</span>
                                        </div>
                                        <button @onclick="()=>DeletePhoto(image, false)" type="button" class="btn btn-outline-danger btn-block mt-2">
                                            Delete
                                        </button>
                                    </div>
                                    serial++;
                                }
                            }
                        </div>
                    </div>


                    <!-- Submit & Back Buttons -->
                    <div class="form-group" style="padding-top:20px;">
                        <button class="btn btn-primary">@Title Product</button>
                        <NavLink href="/ProductList" class="btn btn-secondary">Back To List</NavLink>
                    </div>                  
                </EditForm>
            </div>
        </div>
    </div>
</div>

